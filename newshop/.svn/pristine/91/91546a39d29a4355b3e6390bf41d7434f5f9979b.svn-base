          /**
     * 
     *
     * 首页显示下周时间切换的算法
     * 
     *
     * @return arr $date
     */
        public function getWeeks(){
        $day_now=date("w");
        $week_day=date("Y/m/d");
        if($day_now=="1"){
            $this_mon= date("Y/m/d");
            $this_fri=date("Y/m/d",  strtotime("+4 day"));
            $next_mon=date("Y/m/d",strtotime("+7 day"));
            $next_fri=date("Y/m/d",strtotime("+11 day"));
        }else if($day_now==2){
            $this_mon= date("Y/m/d", strtotime("-1 day"));
            $this_fri=date("Y/m/d",  strtotime("+3 day"));
             $next_mon=date("Y/m/d",strtotime("+6 day"));
            $next_fri=date("Y/m/d",strtotime("+10 day"));
        }else if($day_now==3){
            $this_mon= date("Y/m/d", strtotime("-2 day"));
            $this_fri=date("Y/m/d",  strtotime("+2 day"));
             $next_mon=date("Y/m/d",strtotime("+5 day"));
            $next_fri=date("Y/m/d",strtotime("+9 day"));
        }else if($day_now==4){
            $this_mon= date("Y/m/d", strtotime("-3 day"));
            $this_fri=date("Y/m/d",  strtotime("+1 day"));
             $next_mon=date("Y/m/d",strtotime("+4 day"));
            $next_fri=date("Y/m/d",strtotime("+8 day"));
        }else if($day_now==5){
            $this_mon= date("Y/m/d", strtotime("-4 day"));
            $this_fri=date("Y/m/d");
              $next_mon=date("Y/m/d",strtotime("+3 day"));
            $next_fri=date("Y/m/d",strtotime("+7  day"));
        }
        return array(array($this_mon,$this_fri),array($next_mon,$next_fri));
    }
