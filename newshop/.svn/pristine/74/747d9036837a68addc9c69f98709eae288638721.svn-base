        public function dosendSms(){
 
            $mobile=  intval($this->input->post("mobile_email"));
            $check=  intval($this->input->post("check"));
           
         $send_sms=$this->User_service->dosendSms($mobile,$check);  
      
       if($send_sms["success"]=="used"){
           //已使用
           echo json_encode(array("sussuces"=>"used","msg"=>"该账号已经注册过"));
       }else if($send_sms["success"]=="time_limit"){
           //一分钟后再试
           echo json_encode(array("sussuces"=>"time_limit","msg"=>"请一分钟后再试"));
       }else if($send_sms["success"]=="send_error"){
           //发送失败
           echo json_encode(array("sussuces"=>"send_error","msg"=>"发送失败"));
       }else if($send_sms["success"]=="send_yes"){
           //发送成功
           echo json_encode(array("sussuces"=>"send_yes","msg"=>"发送成功"));
       }
            
        } 
