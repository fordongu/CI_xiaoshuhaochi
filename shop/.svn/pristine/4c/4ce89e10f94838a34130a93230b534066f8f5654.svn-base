.loginBar_eric{
    position:absolute;
	top:3%;
	left: 5%;
	background:#EAEAEA;
	color: #757575;
	border-radius:4px;
	padding:20px 0;
	z-index: 2;
	width: 90%;
	padding: 42px 0;
}
.loginBar_eric input{
	outline: none;
}
.loginTitle_eric,.loginButton{
	text-align:center;
}
.forget_sign{
	text-align: center;
	padding:10px 0;
	
}
.forget_sign a{
	color: #00931B;
}
.forgot_pass{
	background: #EAEAEA;
	color: #757575;
	border-radius: 4px;
	position: absolute;
	top:3%;
	left: 5%;
	width: 90%;
	z-index: 2;
	text-align: center;
	padding-top:40px;
}
.forgot_pass ul {
	width: 100%;
	margin: 15px auto 0;

}
.forgot_pass ul li{
	position: relative;
	margin-bottom: 10px;
	width: 100%;
}
.forgot_pass ul li:nth-child(2){
	text-align: left!important;
	margin-left: 5%;
}
.forgot_pass input{
	width: 90%;
	position: relative;
    margin-top: 20px;
	height:30px;
    line-height: 30px;
    display: inline-block;
    border: 1px solid #aaa;
    border-radius: 4px;
    background: #EAEAEA;
}
.sms_code{
	display: inline-block;
	width: 40%!important;
}

.send_code{
	position: relative;
	color: #fff;
	width: 20%!important;
	text-align: center!important;
	padding:5px;
	margin-left: 5px;
	top: 10px;
    border-radius: 4px;
    cursor: pointer;
    background: #00931B;
}
