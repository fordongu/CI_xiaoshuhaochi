.black-auction-panel {
	display: none;
	position: fixed;
	width: 100%;
	height: 100%;
	top: 0;
	z-index:2;
	background-color: rgba(0, 0, 0, 0.72);
}

.auction-panel-wrapper {
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	width: 100%;
	height: 5.6rem;
	z-index:3;
	background-color: white;
}

#auction-panel-arrow {
	position: absolute;
	top: -1.6rem;
	width: 3rem;
	height: 1.2rem;
	left: 50%;
	margin-left: -1.5rem;
}

#auction-panel-arrow img {
	width: 100%;
}

.auction-panel {
	width: 100%;
	padding-bottom: 0;
	position: absolute;
	top: 0;
	background-color: white;
	z-index: 10;
	-webkit-user-select: none;
	-ms-user-select: none;
	user-select: none;
	-webkit-transform: translate3d(0, 0, 0);
	transform: translate3d(0, 0, 0);
	box-shadow: 0 40rem 0 white;
}

.auction-panel:before {
	content: "";
	width: 100%;
	height: 5rem;
	background-color: white;
	position: absolute;
	top: 100%;
}

.auction-panel small {
	font-size: 1.3rem;
	color: #808080;
}

#auction-panel-header {
	height: 5.6rem;
	width: 100%;
	position: relative;
}

#event-info {
	width: 100%;
	padding: 0 !important;
	word-wrap: break-word;
	word-break: normal;
	box-sizing: border-box;
	color: white;
	font-size: 1.4rem;
}

#event-title {
	position: relative;
	width: 100%;
	font-size: 2rem;
	line-height: 3rem;
	color: white;
	margin-bottom: 0.6rem;
	font-weight: bold;
	padding-bottom: 0.6rem;
	box-shadow: 0 1px 0 rgba(255, 255, 255, 0.2);
}

#event-time-text,#event-place-text {
	font-size: 1.4rem;
	line-height: 2.6rem;
	height: 2.6rem;
	color: #eee;
}

#event-rank {
	margin-top: 0.2rem;
}

.event-rank-icon {
	height: 2.5rem;
	width: 10rem;
}

#event-rank-icon img {
	width: 2rem;
	float: left;
}

#event-rank-icon #event-rank-text {
	float: left;
}

#event-rank-text {
	position: relative;
	left: 1rem;
	bottom: 0.3rem;
	font-size: 1.4rem;
	line-height: 3rem;
	height: 3rem;
	color: #ffd687;
	font-family: "numberlight", "Helvetica Neue", Arial, Helvetica, Geneva,
		sans-serif;
}

#event-rank-text small {
	font-size: 1rem;
	/*font-family: "Helvetica Neue", Arial, Helvetica, Geneva, sans-serif;*/
}

#event-description {
	width: 100%;
	white-space: normal;
	word-wrap: break-word;
	word-break: normal;
	box-sizing: border-box;
	color: #7f7f7f;
	line-height: 26px;
    margin-top:18px;
}


#event-description p {
	margin:0; 
}

.auction-panel-header-major {
	font-size: 3.6rem;
	font-family: "numberlight", "Helvetica Neue", Arial, Helvetica, Geneva,
		sans-serif;
	width: 100%;
	height: 5.2rem;
	padding-top: 0;
	line-height: 5.6rem;
	text-align: center;
	position: absolute;
	top: 0;
}


#jquery_jplayer {
  position: absolute;
  width: 4rem;
  height: 4rem;
  bottom: 1.4rem;
  left: 2rem;
  background-color: rgba(0, 0, 0, 0.66);
  border-radius: 0.6rem;
}

